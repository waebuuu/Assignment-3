<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>
<!--C feature for CRUD-->
<!-- container holding form for formatting reasons-->
<main class="container my-5" style="padding-bottom: 20px">
  <div class="container">
    <div class="row">
      <div class="offset-md-3 col-md-6">
        <div class="card shadow-lg p-4 bg-white">
          <h1><%= title %></h1>
          <form class="form" method="post">
            <!--enter meal type-->
            <div class="form-group">
              <label for="type">Meal Type</label>
              <input
                type="text"
                class="form-control"
                id="typeTextField"
                placeholder="Enter the meal type (eg. Breakfast, Lunch, Dinner, Snack, Dessert)"
                name="meal"
                required />
            </div>
            <!--enter description-->
            <div class="form-group">
              <label for="description">Meal Description</label>
              <input
                type="text"
                class="form-control"
                id="descriptionTextField"
                placeholder="Enter description of meal"
                name="description"
                required />
            </div>

            <!--enter protion size-->
            <div class="form-group">
              <label for="sizeTextField">Portion Size</label>
              <input
                type="text"
                class="form-control"
                id="sizeTextField"
                placeholder="Enter portion size"
                name="portion"
                required />
            </div>
            <!--enter cals-->
            <div class="form-group">
              <label for="calsTextArea">Calories</label>
              <input
                type="text"
                class="form-control"
                id="calsTextField"
                placeholder="Number of Calories"
                name="cals"
                required />
            </div>
            <!--enter protein amount-->
            <div class="form-group">
              <label for="protienTextArea">Protein</label>
              <input
                type="text"
                class="form-control"
                id="proteinTextField"
                placeholder="Grams of Protein"
                name="protein"
                required />
            </div>
            <!--enter carbs amount-->
            <div class="form-group">
              <label for="priceTextField">Carbohydrates</label>
              <input
                type="text"
                class="form-control"
                id="carbsTextField"
                placeholder="Number of carbs"
                name="carbs"
                required />
            </div>
            <!--enter amount of fats-->
            <div class="form-group">
              <label for="priceTextField">Fats</label>
              <input
                type="text"
                class="form-control"
                id="fatTextField"
                placeholder="Number of fats"
                name="fats"
                required />
            </div>
            <!-- buttons, one to submit one to edit-->
            <!--btn-success used to make button green, btn-outline-warning used to have the button outline in yellow and fully yellow when hovered on-->
            <br />
            <button class="btn btn-success" type="submit">
              <i class="fas fa-edit"></i> Submit
            </button>
            <a href="/meals" class="btn btn-outline-warning">
              <i class="fas fa-undo"></i> Cancel
            </a>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>
<%- include ../partials/footer.ejs %>
